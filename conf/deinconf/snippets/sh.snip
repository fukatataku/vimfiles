snippet     getopts
abbr        while getopts ...
options     head
	usage_and_exit() {
	    echo "USAGE: \$0 [-a] [-d value] [-h]" >&2
	    exit 1
	}
	
	while getopts ad:h OPT; do
	    case $OPT in
	        a)  FLAG_A=1
	            ;;
	        d)  VALUE_D=$OPTARG
	            ;;
	        h)  usage_and_exit
	            ;;
	        *)  usage_and_exit
	            ;;
	    esac
	done
	
	shift $((OPTIND - 1))
	
	FLAG_A=${FLAG_A:-0}
	VALUE_D=${VALUE_D:-"no value"}
